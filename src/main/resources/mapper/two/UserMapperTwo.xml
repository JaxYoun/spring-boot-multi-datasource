<?xml version="1.0" encoding="UTF-8" ?> <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yang.springbootmultidatasource.dao.two.UserMapperTwo">

    <update id="updateUser" parameterType="com.yang.springbootmultidatasource.entity.User">
        UPDATE t_user t
        SET t.`name` = #{user.name},
        t.age = #{user.age},
        t.is_married = #{user.isMarried}
    </update>

</mapper>